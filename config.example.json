{
  "unifi": {
    "host": "192.168.1.1",
    "port": 443,

    "_comment_auth": "Choose ONE authentication method below:",
    "_comment_method1": "API Key (for UniFi OS / UDM / Dream Machine) - RECOMMENDED",
    "apiKey": "your-unifi-os-api-key",

    "_comment_method2": "Username/Password (for standalone UniFi Access) - LEGACY",
    "username": "",
    "password": "",

    "verifySsl": false,
    "reconnectDelay": 5000,
    "maxRetries": 3
  },
  "doordeck": {
    "apiToken": "your-doordeck-api-token",
    "refreshToken": "your-doordeck-refresh-token",
    "email": "your-email@example.com",
    "password": "your-doordeck-password",
    "debug": false
  },
  "logging": {
    "level": "info",
    "fileLogging": false,
    "logFilePath": "./logs/bridge.log",
    "maxFileSize": 10485760,
    "maxFiles": 5
  },
  "healthMonitor": {
    "enabled": true,
    "checkInterval": 30000,
    "failureThreshold": 3,
    "timeout": 5000
  },
  "circuitBreaker": {
    "enabled": true,
    "failureThreshold": 5,
    "successThreshold": 2,
    "timeout": 60000
  },
  "retry": {
    "enabled": true,
    "maxAttempts": 3,
    "initialDelay": 1000,
    "maxDelay": 10000,
    "backoffMultiplier": 2
  },
  "eventTranslator": {
    "enabled": true,
    "deduplicationWindow": 5000,
    "maxQueueSize": 1000,
    "processingDelay": 1000
  }
}

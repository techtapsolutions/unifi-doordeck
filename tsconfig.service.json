{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-service",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmitOnError": true
  },
  "include": [
    "src/service-main.ts",
    "src/service/**/*.ts",
    "src/services/bridge/**/*.ts",
    "src/clients/**/*.ts",
    "src/utils/**/*.ts",
    "src/config/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-service",
    "src/index.ts",
    "src/services/web/**/*.ts",
    "tests",
    "electron-ui"
  ]
}

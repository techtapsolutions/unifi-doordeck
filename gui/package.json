{
  "name": "unifi-doordeck-bridge-gui",
  "version": "0.1.2",
  "description": "Native Windows GUI for UniFi-Doordeck Bridge configuration and monitoring",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.main.json && electron .",
    "prebuild": "npm run clean",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "postbuild": "npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:win:nsis": "npm run build && electron-builder --win nsis",
    "package:win:portable": "npm run build && electron-builder --win portable",
    "clean": "rimraf dist dist-renderer release",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "make-icons": "node scripts/make-icons.js"
  },
  "keywords": [
    "electron",
    "doordeck",
    "unifi",
    "access-control",
    "gui"
  ],
  "author": "Tech Tap Solutions",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "node-windows": "^1.0.0-beta.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "@types/node-windows": "^0.1.6",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^32.0.1",
    "electron-builder": "^25.0.5",
    "eslint": "^8.57.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.3"
  },
  "build": {
    "appId": "com.techtap.unifi-doordeck-bridge",
    "productName": "UniFi-Doordeck Bridge",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "dist-renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "asar": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Tech Tap Solutions",
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "UniFi-Doordeck Bridge",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeader": "assets/installer-header.bmp",
      "installerSidebar": "assets/installer-sidebar.bmp",
      "license": "../LICENSE",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": true,
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US"
      ],
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "techtapsolutions",
        "repo": "unifi-doordeck",
        "releaseType": "release"
      }
    ]
  }
}
